<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InformationApp" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Background_color">
        <item name="android:background">@color/superdark_green</item>
        <item name="android:foregroundTint">@color/superdark_green</item>
    </style>

    <style name="title_fix">
        <item name="android:textColor">@color/cream_calm</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="button_color">
        <item name="android:backgroundTint">@color/cream_calm</item>
        <item name="android:textColor">@color/superdark_green</item>
    </style>

    <style name="shapeImageView">
        <item name="cornerSize">20%</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="bg_color">
        <item name="android:background">@color/dark_green</item>
    </style>

    <style name="item_color">
        <item name="cardBackgroundColor">@color/dark_green</item>
        <item name="strokeColor">@color/creamy</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/cream_calm</item>
    </style>
</resources>