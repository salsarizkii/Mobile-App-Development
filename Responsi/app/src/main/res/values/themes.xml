<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Responsi" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Background_color">
        <item name="android:background">@color/cream_calm</item>
        <item name="android:foregroundTint">@color/cream_calm</item>
    </style>

    <style name="title_fix">
        <item name="android:textColor">@color/superdark_green</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">"sans-serif-medium"</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="value_tittle">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="button_color">
        <item name="android:backgroundTint">@color/superdark_green</item>
        <item name="android:textColor">@color/cream_calm</item>
    </style>

    <style name="description">
        <item name="android:fontFamily">monospace</item>
        <item name="android:foregroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="icon_button">
        <item name="tint">@color/button_col</item>
        <item name="android:backgroundTint">@color/cream_calm</item>
        <item name="android:background">@color/material_on_background_disabled</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="navbar_col">
        <item name="android:background">@color/superdark_green</item>
        <item name="android:foregroundTint">@color/superdark_green</item>
        <item name="android:foregroundTintMode">add</item>
    </style>


    <style name="shapeImageView">
        <item name="cornerSize">20%</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="bg_color">
        <item name="android:background">@color/light_green</item>
    </style>


    <style name="item_color">
        <item name="cardBackgroundColor">@color/light_green</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/dark_creamy</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Koreandramaku" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>
